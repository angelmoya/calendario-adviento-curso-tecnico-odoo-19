<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Libros de la Biblioteca">
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_id"/>
                <field name="is_best_seller"/>
                <field name="date_published"/>
            </list>
        </field>
    </record>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Detalles del Libro">
                <header>
                    <button name="%(action_wizard_duplicate_book)d" type="action" string="Duplicate Book" class="oe_highlight"/>
                    <button name="action_open_books_with_same_tags" type="object" string="Open Books With Same Tags"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="isbn"/>
                            <field name="date_published"/>
                            <field name="edition_number"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="author_id"/>
                            <field name="is_best_seller"/>
                            <field name="book_genre"/>
                            <field name="catalog_date"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <button name="action_clean_tags" type="object" string="Clean Tags" class="oe_highlight"/>
                            <button name="action_update_author_tags" type="object" string="Update Author Tags"/>
                            <button name="action_update_author_tags" type="object" string="Update Author Tags" context="{'add_other_book_tags': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description_page" string="Descripción">
                            <field name="description"/>
                        </page>
                        <page name="product" string="Products">
                            <group>
                                <field name="product_qty"/>
                            </group>
                            <field name="product_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Buscar Libros">
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_id"/>
                <field name="tag_ids"/>
                <filter name="best_sellers" string="Best Sellers" domain="[('is_best_seller','=',True)]"/>
                <filter name="no_product" string="No Product" domain="[('product_qty','=',0)]"/>
                <separator/>
                <filter name="novel" string="Novel" domain="[('book_genre','=','novel')]"/>
                <filter name="fiction" string="Fiction" domain="[('book_genre','=','fiction')]"/>
                <filter name="biography" string="Biography" domain="[('book_genre','=','biography')]"/>
                <separator/>
                <filter name="group_by_genre" string="Group by Genre" context="{'group_by':'book_genre'}"/>
                <filter name="group_by_author" string="Group by Author" context="{'group_by':'author_id'}"/>
                <filter name="group_by_best_seller" string="Group by Best Seller" context="{'group_by':'is_best_seller'}"/>
                <filter name="group_by_date_published" string="Group by Date Published" context="{'group_by':'date_published'}"/>
            </search>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer libro de la biblioteca!
            </p>
        </field>
    </record>

    <record id="action_library_book_novel" model="ir.actions.act_window">
        <field name="name">Novel</field>
        <field name="res_model">library.book</field>
        <field name="context">{'default_book_genre': 'novel', 'search_default_novel': True}</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer libro de la biblioteca!
            </p>
        </field>
    </record>

    <record id="action_library_book_fiction" model="ir.actions.act_window">
        <field name="name">Fiction</field>
        <field name="res_model">library.book</field>
        <field name="context">{'default_book_genre': 'fiction', 'search_default_fiction': True}</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer libro de la biblioteca!
            </p>
        </field>
    </record>

    <menuitem 
        id="menu_library_root" 
        name="Biblioteca" 
        sequence="10" 
        web_icon="fa fa-book"/> 
    
    <menuitem 
        id="menu_library_master_book" 
        name="Library" 
        parent="menu_library_root" 
        sequence="10"/>
    <menuitem 
        id="menu_library_master" 
        name="Maestros" 
        parent="menu_library_root" 
        sequence="20"/>

    <menuitem 
        id="menu_library_book" 
        name="Libros" 
        parent="menu_library_master_book" 
        action="action_library_book" 
        sequence="10"/>
    <menuitem 
        id="menu_library_book_novel" 
        name="Novel" 
        parent="menu_library_master_book" 
        action="action_library_book_novel" 
        sequence="20"/>
    <menuitem 
        id="menu_library_book_fiction" 
        name="Fiction" 
        parent="menu_library_master_book" 
        action="action_library_book_fiction" 
        sequence="30"/>

</odoo>