<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_author_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <list string="Autores de la Biblioteca">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_library_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Detalles del Autor">
                <sheet>
                    <h1><field name="name"/></h1>
                    <notebook>
                        <page name="books_page" string="Libros">
                            <field name="book_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_author" model="ir.actions.act_window">
        <field name="name">Autor</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">list,form</field> <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Â¡Crea tu primer autor de la biblioteca!
            </p>
        </field>
    </record>



    <menuitem 
        id="menu_library_author" 
        name="Autor" 
        parent="library.menu_library_master" 
        action="action_library_author" 
        sequence="10"/>

</odoo>