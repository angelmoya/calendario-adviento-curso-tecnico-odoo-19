<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record model="ir.module.category" id="module_category_library">
            <field name="name">Library</field>
            <field name="sequence">1</field>
        </record>
        <record model="res.groups.privilege" id="res_groups_privilege_library">
            <field name="name">Library</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="sequence">7</field>
        </record>
        <record id="group_library_user" model="res.groups">
            <field name="name">Library User</field>
            <field name="privilege_id" ref="res_groups_privilege_library" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>
        <record id="group_library_manager" model="res.groups">
            <field name="name">Library Manager</field>
            <field name="privilege_id" ref="res_groups_privilege_library" />
            <field name="implied_ids" eval="[(4, ref('group_library_user'))]" />
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="library_book_rule_user" model="ir.rule">
            <field name="name">Library Book Rule User</field>
            <field name="model_id" ref="model_library_book"/>
            <field name="domain_force">['|', ('user_id', '=', False), ('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_library_user'))]"/>
        </record>
        <record id="library_book_rule_manager" model="ir.rule">
            <field name="name">Library Book Rule Manager</field>
            <field name="model_id" ref="model_library_book"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_library_manager'))]"/>
        </record>
</odoo>